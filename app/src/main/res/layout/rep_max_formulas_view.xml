<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        android:text="@string/calculation_explanation"/>

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/use_all_formulas"
        android:text="@string/use_all_formulas"
        android:buttonTint="@color/deep_orange_500"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/brzycki"
        android:text="@string/brzycki"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/epley"
        android:text="@string/epley"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/lander"
        android:text="@string/lander"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/lombardi"
        android:text="@string/lombardi"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/mayhew"
        android:text="@string/mayhew"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/oconner"
        android:text="@string/oconner"/>

    <View
        android:layout_width="1dp"
        android:layout_height="8dp" />

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/wathen"
        android:text="@string/wathen"/>
</LinearLayout>