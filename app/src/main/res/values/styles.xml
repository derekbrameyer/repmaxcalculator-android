<resources>
    <style name="PadButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PadLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PadLayoutStyle.Options">
        <item name="android:elevation">4dip</item>
    </style>

    <style name="PadLayoutStyle.Numeric">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">264</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingBottom">00dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">28dip</item>
    </style>

    <style name="PadLayoutStyle.RepMaxes">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">264</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PadButtonStyle.Numeric">
        <item name="android:layout_margin">0dip</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="PadButtonStyle.Numeric.Delete">
        <item name="android:visibility">visible</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RepMaxViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rep_max_view_background</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:buttonTint">@color/blue_500</item>
    </style>

</resources>
